
{% block title %}Liste des Commandes{% endblock %}

{% block body %}
<h1 class="my-4">Liste des Commandes</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date de Création</th>
            <th>Statut</th>
            <th>Produits</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.creationDate|date('d/m/Y H:i') }}</td>
                <td>{{ commande.status }}</td>
                <td>
                    <ul>
                        {% for product in commande.products %}
                            <li>{{ product.getNom() }} ({{ product.getPrix() }} TND)</li>
                        {% else %}
                            <li>Aucun produit associé</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <form method="POST" action="{{ path('admin_commande_change_status', {'id': commande.id}) }}">
                        <select name="status" class="form-control">
                            <option value="En cours" {% if commande.status == 'En cours' %}selected{% endif %}>En cours</option>
                            <option value="Livrée" {% if commande.status == 'Livrée' %}selected{% endif %}>Livrée</option>
                        </select>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucune commande trouvée.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
