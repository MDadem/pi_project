		<!-- Google Web Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com"> <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">

		<!-- Icon Font Stylesheet -->
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

		<!-- Libraries Stylesheet -->
		<link rel="stylesheet" href="{{ asset('lib/animate/animate.min.css') }}"/>
		<link href="{{ asset('lib/lightbox/css/lightbox.min.css') }}" rel="stylesheet">
		<link
		href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">

		<!-- Customized Bootstrap Stylesheet -->
		<link
		href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

		<!-- Template Stylesheet -->
		<link href="{{ asset('css/style.css') }}" rel="stylesheet"></head>
	<body>

		{# <!-- Spinner Start -->
		<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
			<div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
				<span class="sr-only">Loading...</span>
			</div>
		</div>
		<!-- Spinner End --> #}

		<!-- Topbar Start -->
		{% block header%}
			{% include 'frontend/topbar/topbar.html.twig' %}
			<!-- Topbar End -->

			<!-- Navbar & Hero Start -->
		{% include 'frontend/navbar/navbar.html.twig' %}
		{% endblock %}

			<div class="container-fluid"> <div
				class="row">
				<!-- Sidebar -->
				{% include 'accueil/sidebar/sidebar.html.twig' %}

				<!-- Contenu Central -->
				<div class="col-lg-6 p-3">
					{% block content %}
						<h1>Contenu Central</h1>
						<p>Bienvenue sur la page principale. Vous pouvez ajouter ici le contenu de votre choix.</p>
					{% endblock %}
				</div>
			</div>
		</div>
		<!--Start ack to Top -->
		<a href="#" class="btn btn-primary btn-lg-square rounded-circle back-to-top">
			<i class="fa fa-arrow-up"></i>
		</a>
		<!-- End Back to Top -->
		<script src="{{ asset('js/main.js') }}"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
		{# // <script src="{{ asset('js/accueil.js') }}"></script> #}


		{% block footer%}
		<!-- Footer Start -->
		{% include 'frontend/footer/footer.html.twig' %}
		<!-- Footer End -->
		{% endblock%}</body>
