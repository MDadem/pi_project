		<!-- Template Javascript -->
		<script src="{{ asset('js/main.js') }}"></script>
		<script>
			document.addEventListener("DOMContentLoaded", function () {
const form = document.querySelector("form");

form.addEventListener("submit", function (event) {
let isValid = true;

// Get form fields
const name = document.getElementById("name");
const email = document.getElementById("email");
const phone = document.getElementById("phone");
const project = document.getElementById("project");
const subject = document.getElementById("subject");
const message = document.getElementById("message");

// Name Validation (Required)
if (name.value.trim() === "") {
isValid = false;
alert("Name is required.");
}

// Email Validation (Required & Format)
const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
if (email.value.trim() === "" || ! emailPattern.test(email.value)) {
isValid = false;
alert("Enter a valid email address.");
}

// Phone Validation (Optional but Numeric)
const phonePattern = /^[0-9]{8,15}$/;
if (phone.value.trim() !== "" && ! phonePattern.test(phone.value)) {
isValid = false;
alert("Enter a valid phone number (8-15 digits).");
}

// Project Validation (Optional but at least 3 characters)
if (project.value.trim() !== "" && project.value.trim().length < 3) {
isValid = false;
alert("Project name should be at least 3 characters.");
}

// Subject Validation (Required)
if (subject.value.trim() === "") {
isValid = false;
alert("Subject is required.");
}

// Message Validation (Required & Minimum 10 characters)
if (message.value.trim() === "" || message.value.trim().length < 10) {
isValid = false;
alert("Message must be at least 10 characters.");
}

if (! isValid) {
event.preventDefault(); // Prevent form submission if validation fails
}
});
});
		</script>

	</body>

</html>
