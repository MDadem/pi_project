{# templates/frontend/product/delete_product.html.twig #}
{% block title %}Delete Product{% endblock %}

{% block body %}
    <h1>Are you sure you want to delete this product?</h1>

    <form method="post" action="{{ path('product_delete', {id: product.id}) }}">
        <button class="btn btn-danger" type="submit">Yes, delete it</button>
    </form>

    <a href="{{ path('product_list') }}" class="btn btn-secondary">Cancel</a>
{% endblock %}
