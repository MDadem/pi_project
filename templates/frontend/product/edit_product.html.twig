{% block body %}
<div class="container py-5">
    <h2 class="text-center mb-5 wow fadeIn" data-wow-delay="0.2s">Edit Product</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                <div class="card shadow-sm wow fadeInUp" data-wow-delay="0.3s">
                    <div class="card-body">
                        <div class="form-group">
                            {{ form_label(form.productName) }}
                            {{ form_widget(form.productName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.productName) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.productDescription) }}
                            {{ form_widget(form.productDescription, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                            {{ form_errors(form.productDescription) }}
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                {{ form_label(form.productPrice) }}
                                {{ form_widget(form.productPrice, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.productPrice) }}
                            </div>
                            <!-- Added Use Dynamic Pricing here -->
                            <div class="col-md-6 checkbox-group">
                                {{ form_widget(form.useDynamicPricing, {'attr': {'class': ''}}) }}
                                {{ form_label(form.useDynamicPricing) }}
                                {{ form_errors(form.useDynamicPricing) }}
                            </div>
                            <div class="col-md-6 form-group">
                                {{ form_label(form.discount) }}
                                {{ form_widget(form.discount, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.discount) }}
                            </div>
                            <div class="col-md-6 form-group">
                                {{ form_label(form.productStock) }}
                                {{ form_widget(form.productStock, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.productStock) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.productCategory) }}
                            {{ form_widget(form.productCategory, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.productCategory) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.image_url) }}
                            {% if product.imageUrl %}
                                <img src="{{ product.imageUrl }}" alt="{{ product.productName }}" class="img-thumbnail mb-2" style="max-height: 150px;">
                            {% endif %}
                            {{ form_widget(form.image_url, {'attr': {'class': 'form-control-file'}}) }}
                            {{ form_errors(form.image_url) }}
                        </div>
                        <button type="submit" class="btn btn-primary d-block mx-auto">Update Product</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
