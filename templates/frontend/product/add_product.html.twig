    <style>
        body {
            background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
            min-height: 100vh;
        }

        .form-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 10px 50px rgba(0,0,0,0.15);
            padding: 3rem;
            margin: 3rem auto;
            max-width: 900px;
            position: relative;
            overflow: hidden;
            transition: all 0.4s ease;
            backdrop-filter: blur(5px);
        }

        .form-container:before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(122,196,0,0.1) 0%, transparent 70%);
            transform: rotate(30deg);
            pointer-events: none;
        }

        .form-container:hover {
            box-shadow: 0 15px 60px rgba(0,0,0,0.2);
        }

        .form-control, .form-select {
            border-radius: 12px;
            border: 2px solid #dee2e6;
            padding: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(2px);
        }

        .form-control:focus, .form-select:focus {
            border-color: #7ac400;
            box-shadow: 0 0 15px rgba(122,196,0,0.3);
            background: white;
        }

        .form-control-file {
            padding: 0.75rem;
            border: 2px dashed #7ac400;
            border-radius: 12px;
            background: rgba(122,196,0,0.05);
            transition: all 0.3s ease;
        }

        .form-control-file:hover {
            background: rgba(122,196,0,0.1);
        }

        h3 {
            color: #2c3e50;
            font-weight: 800;
            font-size: 2.5rem;
            margin-bottom: 2.5rem;
            position: relative;
            z-index: 1;
        }

        h3:after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 4px;
            background: linear-gradient(to right, #7ac400, #a3e635);
            border-radius: 4px;
        }

        h6 {
            color: #34495e;
            font-weight: 700;
            margin-bottom: 1rem;
            letter-spacing: 0.5px;
        }

        .field-wrapper {
            position: relative;
            margin-bottom: 2rem;
        }

        .field-wrapper i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #7ac400;
            font-size: 1.2rem;
        }

        .btn-primary {
            border-radius: 30px;
            padding: 1rem 3rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            background: linear-gradient(45deg, #7ac400, #a3e635);
            border: none;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }

        .btn-primary:before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.6s ease, height 0.6s ease;
        }

        .btn-primary:hover:before {
            width: 300px;
            height: 300px;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(122,196,0,0.4);
        }

        .checkbox {
            padding: 1rem;
            background: rgba(122,196,0,0.05);
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .checkbox:hover {
            background: rgba(122,196,0,0.1);
        }

        .checkbox input {
            width: 20px;
            height: 20px;
            accent-color: #7ac400;
        }

        .alert {
            border-radius: 12px;
            margin-bottom: 1.5rem;
            padding: 1.25rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            animation: slideIn 0.5s ease;
            border-left: 5px solid;
        }

        .alert-success { border-left-color: #7ac400; }
        .alert-danger { border-left-color: #dc3545; }
        .alert-info { border-left-color: #17a2b8; }

        @keyframes slideIn {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .back-to-top {
            bottom: 40px;
            right: 40px;
            width: 60px;
            height: 60px;
            background: linear-gradient(45deg, #7ac400, #a3e635);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(122,196,0,0.3);
            transition: all 0.4s ease;
        }

        .back-to-top:hover {
            transform: scale(1.15) rotate(360deg);
            box-shadow: 0 8px 25px rgba(122,196,0,0.5);
        }

        .text-danger {
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }
    </style>
