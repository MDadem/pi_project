<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Event Ticket - {{ registration.event.title }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        .ticket {
            border: 2px solid #000;
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        .event-details, .user-details {
            margin-bottom: 20px;
        }
        .qr-code {
            text-align: center;
            margin: 20px 0;
        }
        .qr-code img {
            max-width: 200px;
        }
        .ticket-number {
            text-align: center;
            font-size: 14px;
            color: #666;
            margin-top: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 10px 0;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <div class="ticket">
        <div class="header">
            <h1>Event Ticket</h1>
            <h2>{{ registration.event.title }}</h2>
        </div>

        <div class="event-details">
            <h3>Event Details</h3>
            <table>
                <tr>
                    <th>Date</th>
                    <td>{{ registration.event.eventDate|date('F d, Y H:i') }}</td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>{{ registration.event.eventLocation }}</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{{ registration.event.category.name }}</td>
                </tr>
            </table>
        </div>

        <div class="user-details">
            <h3>Attendee Information</h3>
            <table>
                <tr>
                    <th>Name</th>
                    <td>{{ registration.user.firstName }} {{ registration.user.lastName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ registration.user.email }}</td>
                </tr>
                <tr>
                    <th>Registration Date</th>
                    <td>{{ registration.registrationDate|date('F d, Y H:i') }}</td>
                </tr>
            </table>
        </div>

        <div class="qr-code">
            <img src="{{ absolute_url(asset(qrCodePath)) }}" alt="Ticket QR Code">
        </div>

        <div class="ticket-number">
            Ticket #: {{ registration.ticketNumber }}
        </div>
    </div>
</body>
</html>
