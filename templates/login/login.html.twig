<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                {{ form_start(form, { 'attr': { 'class': 'register-form', 'id': 'register-form' } }) }}
                <div class="form-group">
                    <label for="{{ form.name.vars.id }}"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    {{ form_widget(form.name, { 'attr': { 'placeholder': 'Your Name' } }) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.email.vars.id }}"><i class="zmdi zmdi-email"></i></label>
                    {{ form_widget(form.email, { 'attr': { 'placeholder': 'Your Email' } }) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.password.vars.id }}"><i class="zmdi zmdi-lock"></i></label>
                    {{ form_widget(form.password, { 'attr': { 'placeholder': 'Password' } }) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.confirm_password.vars.id }}"><i class="zmdi zmdi-lock-outline"></i></label>
                    {{ form_widget(form.confirm_password, { 'attr': { 'placeholder': 'Repeat your password' } }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.agree_terms, { 'attr': { 'class': 'agree-term' } }) }}
                    <label for="{{ form.agree_terms.vars.id }}" class="label-agree-term">
                        <span><span></span></span> I agree to all statements in
                        <a href="{{ path('terms_of_service') }}" class="term-service">Terms of service</a>
                    </label>
                </div>
                <div class="form-group form-button">
                    <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="signup-image">
                <figure><img src="{{ asset('img/signup-image.jpg') }}" alt="signup image"></figure>
                <a href="{{ path('login') }}" class="signup-image-link">I am already a member</a>
            </div>
        </div>
    </div>
</section>
