{% extends 'backend/base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <div class="container-fluid position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->

        {% include 'backend/sidebar/sidebar.html.twig' %}

        <div class="content">
            {% include 'backend/navbar/navbar.html.twig' %}

            <div class="container-fluid pt-4 px-4">
                <div class="row">
                    <div class="col-12">
                        <div class="bg-light rounded p-4">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h2 class="mb-0">Edit Event</h2>
                                <a href="{{ path('app_dashboard_events') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                            </div>

                            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_row(form.title, {
                                            'label': 'Event Title',
                                            'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Enter event title'
                                            }
                                        }) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_row(form.eventDescription, {
                                            'label': 'Description',
                                            'attr': {
                                                'class': 'form-control',
                                                'rows': '4',
                                                'placeholder': 'Enter event description'
                                            }
                                        }) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_row(form.eventLocation, {
                                            'label': 'Location',
                                            'attr': {
                                                'class': 'form-control',
                                                'placeholder': 'Enter event location'
                                            }
                                        }) }}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_row(form.eventDate, {
                                            'label': 'Event Date',
                                            'attr': {
                                                'class': 'form-control'
                                            }
                                        }) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_row(form.numberOfPlaces, {
                                            'label': 'Number of Places',
                                            'attr': {
                                                'class': 'form-control',
                                                'min': '1'
                                            }
                                        }) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_row(form.category, {
                                            'label': 'Category',
                                            'attr': {
                                                'class': 'form-select'
                                            }
                                        }) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_row(form.status, {
                                            'label': 'Status',
                                            'attr': {
                                                'class': 'form-select'
                                            }
                                        }) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_row(form.imageFile, {
                                            'label': 'Event Image',
                                            'attr': {
                                                'class': 'form-control'
                                            }
                                        }) }}
                                        {% if event.imageFilename %}
                                            <div class="mt-2">
                                                <img src="{{ asset('uploads/events/' ~ event.imageFilename) }}" 
                                                     alt="Current event image" 
                                                     class="img-thumbnail" 
                                                     style="max-width: 200px">
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>

            {% include 'backend/footer/footer.html.twig' %}
        </div>

        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
{% endblock %}
