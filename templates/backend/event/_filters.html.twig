<!-- Filter Section -->
<form method="get" class="bg-white p-3 mb-4 rounded">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text" name="search" class="form-control form-control-sm" 
                   placeholder="Search..." value="{{ app.request.query.get('search') }}">
        </div>
        <div class="col-md-2">
            <select name="category" class="form-select form-select-sm">
                <option value="">All Categories</option>
                {% for cat in categories %}
                    <option value="{{ cat.id }}" {{ app.request.query.get('category') == cat.id ? 'selected' : '' }}>
                        {{ cat.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="col-md-2">
            <select name="status" class="form-select form-select-sm">
                <option value="">All Status</option>
                <option value="active" {{ app.request.query.get('status') == 'active' ? 'selected' : '' }}>Active</option>
                <option value="cancelled" {{ app.request.query.get('status') == 'cancelled' ? 'selected' : '' }}>Cancelled</option>
                <option value="completed" {{ app.request.query.get('status') == 'completed' ? 'selected' : '' }}>Completed</option>
            </select>
        </div>
        <div class="col-md-2">
            <input type="date" name="dateFrom" class="form-control form-control-sm" 
                   value="{{ app.request.query.get('dateFrom') }}">
        </div>
        <div class="col-md-2">
            <input type="date" name="dateTo" class="form-control form-control-sm" 
                   value="{{ app.request.query.get('dateTo') }}">
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary btn-sm w-100">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</form>
