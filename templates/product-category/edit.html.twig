{% block body %}
<div class="container py-5">
    <h1 class="wow fadeIn" data-wow-delay="0.2s">Edit Category</h1>
    <div class="form-container wow fadeInUp" data-wow-delay="0.3s">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                {{ form_label(form.name, 'Category Name') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter category name'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Enter category description'}}) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="btn-container">
                <button type="submit" class="btn btn-primary">Update Category</button>
                <a href="{{ path('product_category_index') }}" class="btn btn-secondary">Back to List</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
